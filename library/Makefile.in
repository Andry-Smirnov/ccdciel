#
#   Makefile.fpc for ccdlibrary 0.0
#

[package]
name=library
version=0.0

[rules]
.PHONY: all

all:
ifeq ($(OS_TARGET),win32)
        $(MAKE) -C wcs -f Makefile.win32 all
        $(MAKE) -C dcraw -f Makefile.win32 all
 else
 ifeq ($(OS_TARGET),win64)
        $(MAKE) -C wcs -f Makefile.win64 all
        $(MAKE) -C dcraw -f Makefile.win64 all
 else
 ifeq ($(OS_TARGET),darwin)
        $(MAKE) -C wcs all arch_flags=-m64
        $(MAKE) -C dcraw -f Makefile.darwin all
 endif
 endif
endif

clean:
ifeq ($(OS_TARGET),win32)
        $(MAKE) -C wcs -f Makefile.win32 clean
        $(MAKE) -C dcraw -f Makefile.win32 clean
else
ifeq ($(OS_TARGET),win64)
        $(MAKE) -C wcs -f Makefile.win64 clean
        $(MAKE) -C dcraw -f Makefile.win64 clean
else
ifeq ($(OS_TARGET),darwin)
	$(MAKE) -C wcs clean
	$(MAKE) -C dcraw -f Makefile.darwin clean
endif
endif
endif
